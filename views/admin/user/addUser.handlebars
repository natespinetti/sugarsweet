<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="card mb-4 box-shadow h-100">
                <div class="card-body row align-items-end m-0">
                    <h4 class="card-title">{{title}}</h4>
                    <form class="form-inline" action="/admin/users/added" method="post">
                        <label for="name">Name:</label>
                        <input type="text" name="name" class="form-control input-text mb-2 w-100">
                        <label for="email">Email:</label>
                        <input type="text" name="email" class="form-control input-text mb-2 w-100">
                        <label for="password">Password:</label>
                        <input type="text" name="password" class="form-control input-text mb-2 w-100">
                        <p class="mb-0 mt-2">Role:</p>
                        <div class="d-flex w-100">
                            <input type="radio" id="user" name="role" value="true" class="form-control input-text">
                            <label for="user">User</label>
                        </div>
                        <div class="d-flex w-100">
                            <input type="radio" id="admin" name="role" value="false" class="form-control input-text">
                            <label for="admin">Admin</label>
                        </div>
                        <p class="mb-0 mt-2">Is Guest?</p>
                        <div class="d-flex w-100">
                            <input type="radio" id="yes" name="isguest" value="true" class="form-control input-text">
                            <label for="yes">Yes</label>
                        </div>
                        <div class="d-flex w-100">
                            <input type="radio" id="no" name="isguest" value="false" class="form-control input-text">
                            <label for="no">No</label>
                        </div>
                        <label for="userid">userId:</label>
                        <input type="text" name="userid" class="form-control input-number mb-2 w-100">
                        <div class="input-group-btn d-grid">
                            <button type="submit" class="btn btn-primary">Add user</button>
                        </div>
                    </form>
                    <a href="/admin"><button class="btn btn-secondary mt-3">Cancel</button></a>
                </div>
            </div>
        </div>
    </div>
</div>