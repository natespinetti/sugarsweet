<div class="container">
    <h1 class="text-center mb-4">{{title}}{{data.orderId}}</h1>
    <div class="row justify-content-center">
        <table class="table table-condensed mb-6">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {{#each data.products}}
                <tr>
                    <td>{{this.productFlavor}}</td>
                    <td>{{this.quantity}}</td>
                    <td>${{this.productPrice}}</td>
                </tr>
            {{/each}}
                <tr>
                    <td />
                    <td />
                    <td>Total: ${{data.total}}</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-condensed mb-6">
            <thead>
                <tr>
                    <th>Contact Information</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Name: {{data.contact.name}}</td>
                    <td>Email: {{data.contact.email}}</td>
                    <td>Phone: {{data.contact.phone}}</td>
                </tr>
                <tr>
                    <td>Address: {{data.location.address}}</td>
                    <td>City: {{data.location.city}}</td>
                    <td>State: {{data.location.state}}</td>
                    <td>Zip: {{data.location.zip}}</td>
                </tr>
            </tbody>
        </table>
        <a href="/orders?id={{data.userId}}"><button>View all orders</button></a>
    </div>
</div>