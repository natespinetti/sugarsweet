<div class="container">
    <h1 class="text-center mb-4">{{title}}</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>New User</h3>
            <form action="/signup" method="post" novalidate>
                <div class="form-group">
                    <label for="newUsername">Username</label>
                    <input type="text" class="form-control" id="newUsername" name="username" required disabled>
                    <div class="invalid-feedback">
                        Please enter a valid username.
                    </div>
                </div>
                <div class="form-group">
                    <label for="newPassword">Password</label>
                    <input type="password" class="form-control" id="newPassword" name="password" required disabled>
                    <div class="invalid-feedback">
                        Please enter a valid password.
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" disabled>Sign Up</button>
            </form>
            <a href="/login/guest">Or, continue as guest</a>
        </div>
    </div>
</div>