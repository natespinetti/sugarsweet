{{#if data}}
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th scope="col">User ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Orders</th>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{data.userId}}</td>
            <td>{{data.name}}</td>
            <td>{{data.email}}</td>
            <td>
                {{#each data.orders}}
                <li><a href="/orders/edit/?id={{this}}">{{this}}</a></li>
                {{/each}}
            </td>
        </tr>
    </tbody>
</table>
{{else}}
<p>
    No user found
</p>
{{/if}}